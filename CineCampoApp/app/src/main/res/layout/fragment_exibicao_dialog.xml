<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout android:layout_height="500dp"
        android:layout_width="match_parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:text="Duração"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_duracao"
            android:textColor="@color/material_drawer_dark_background"
            android:textSize="20sp"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_below="@+id/textView_genero"
            android:layout_alignLeft="@+id/textView_genero"
            android:layout_alignStart="@+id/textView_genero" />

        <TextView
            android:text="Gênero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_genero"
            android:textColor="@color/material_drawer_dark_background"
            android:textSize="20sp"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_below="@+id/textView_nome_filme"
            android:layout_alignLeft="@+id/textView_nome_filme"
            android:layout_alignStart="@+id/textView_nome_filme"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <ImageView
            app:srcCompat="@drawable/popcorn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView_capa"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="120dp"
            android:layout_height="180dp" />

        <TextView
            android:text="Nome do Filme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_nome_filme"
            android:textSize="25sp"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView_capa"
            android:layout_toEndOf="@+id/imageView_capa"
            android:textColor="@color/material_drawer_dark_background"
            android:textStyle="normal|bold"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <TextView
            android:text="Sinopse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_usuario_comentario"
            android:textColor="@color/material_drawer_dark_background"
            android:textSize="20sp"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_below="@+id/imageView_capa"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <SurfaceView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_below="@+id/button_trailer"
            android:id="@+id/surfaceView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <Button
            android:text="Trailer"
            android:layout_height="wrap_content"
            android:id="@+id/button_trailer"
            android:background="@color/colorPrimaryButton"
            android:textColor="@color/material_drawer_background"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="normal|bold"
            android:layout_width="120dp"
            android:layout_below="@+id/textView_usuario_comentario"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:text="Avalie o filme com uma nota e um comentário"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:textColor="@color/material_drawer_dark_background"
            android:textSize="12sp"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_below="@+id/surfaceView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp" />

        <TextView
            android:text="Nota:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            android:textColor="@color/material_drawer_dark_background"
            android:textSize="20sp"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_below="@+id/textView20"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:text="Comente:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView22"
            android:textColor="@color/material_drawer_dark_background"
            android:textSize="20sp"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_below="@+id/ratingBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_below="@+id/textView22"
            android:id="@+id/editText_comentario"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="7dp" />

        <TextView
            android:text="Sessão"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_sessao"
            android:textColor="@color/material_drawer_dark_background"
            android:textSize="20sp"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_below="@+id/textView_duracao"
            android:layout_alignLeft="@+id/textView_duracao"
            android:layout_alignStart="@+id/textView_duracao"
            android:layout_marginBottom="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/editText_comentario"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp">

            <Button
                android:text="Comentários"
                android:layout_height="wrap_content"
                android:id="@+id/button_comentarios"
                android:background="@color/colorPrimaryButton"
                android:textColor="@color/material_drawer_background"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="normal|bold"
                android:layout_width="120dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="3dp" />

            <Button
                android:text="Avaliar"
                android:layout_height="wrap_content"
                android:id="@+id/button_votar"
                android:background="@color/colorPrimaryButton"
                android:textColor="@color/material_drawer_background"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="normal|bold"
                android:layout_width="120dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="3dp" />

        </RelativeLayout>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:isIndicator="true"
            android:minHeight="60dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:theme="@style/RatingBar"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_below="@+id/surfaceView"
            android:layout_alignLeft="@+id/textView21"
            android:layout_alignStart="@+id/textView21" />

    </RelativeLayout>
</ScrollView>